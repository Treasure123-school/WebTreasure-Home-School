{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "rootDir": "../",  // ✅ Change from "." to "../" (root directory)
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "../",  // ✅ Add baseUrl for path resolution
    "paths": {
      "@shared/*": ["shared/*"]  // ✅ Add path mapping for shared files
    }
  },
  "include": [
    "./**/*.ts",      // ✅ Include all files in server directory
    "../shared/**/*.ts"  // ✅ Explicitly include shared files
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vite.ts",        // ✅ Exclude development files
    "**/*.test.ts"    // ✅ Exclude test files
  ]
}
