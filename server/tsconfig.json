{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./"
    // REMOVE the paths section entirely
  },
  "include": [
    "./**/*.ts"  // ONLY include files in server directory
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vite.ts",
    "**/*.test.ts"
  ]
}
