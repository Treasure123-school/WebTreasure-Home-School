{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "rootDir": ".",      // ✅ Change from "src" to "."
    "outDir": "dist",    // ✅ Keep this
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],  // ✅ Change from "src/**/*.ts" to "**/*.ts"
  "exclude": ["node_modules", "dist", "vite.ts"]
}
